@model IEnumerable<VahanBlog.Entities.BlogPost>

@{
    ViewBag.Title = "AdminView";
    Layout = "~/Views/Shared/_AdminShared.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Blog Posts</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th></th>
            </tr>
            @{
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { item.PostId }) |
                            @Html.ActionLink("Details", "Details", new { item.PostId }) |
                            @Html.ActionLink("Delete", "Delete", new { item.PostId })
                        </td>
                    </tr>
                    i++;
                }

            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add Post", "Create", null,
new { @class = "btn btn-default" })
    </div>
</div>



